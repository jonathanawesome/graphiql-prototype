    "ladle:build": "npm run build --filter ladle",
    "ladle:tsc": "pnpm run tsc --filter ladle",
    "api:dev": "pnpm run dev --filter api",
    "api:codegen": "pnpm run codegen --filter api",
    "api:codegen:watch": "pnpm run codegen:watch --filter api",
