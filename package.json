    "api:prisma:push": "pnpm run prisma:db:push --filter api",
    "api:prisma:reset": "pnpm run prisma:reset --filter api",
    "api:prisma:studio": "pnpm run prisma:studio --filter api",
    "api:tsc": "pnpm run tsc --filter api",
    "graphiql-v2:tsc": "pnpm run tsc --filter @graphiql-v2-prototype/graphiql-v2",
    "graphiql-plugin-pane-pathfinder:tsc": "pnpm run tsc --filter @graphiql-v2-prototype/graphiql-plugin-pane-pathfinder",
